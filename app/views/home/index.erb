<h1>Home</h1>

<% @movies.each do |movie| %>
    <div style="margin: 10px; background-color: blanchedalmond;">
      <div style="background-color: burlywood;">
        <h3>
          <%= movie.title %>
        </h3>
      </div>
      <div>
        <p>
          <%= movie.description %>
        </p>
      </div>
      <div>
        <strong>Director:</strong>
        <%= movie.director %>
      </div>
      <div>
        <span>
          <strong>Country:</strong>
          <%= movie.country %>
        </span>
        <span>
          <strong>Date:</strong>
          <%= movie.date %>
        </span>
      </div>
    </div>
<% end %>